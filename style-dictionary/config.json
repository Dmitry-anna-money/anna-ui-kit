{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "android": {
      "transformGroup": "android",
      "buildPath": "../android/app/src/main/res/values/",
      "files": [
        {
          "destination": "ds_colors.xml",
          "format": "android/resources",
          "filter": {
            "attributes": { "category": "color" }
        }
        },
        {
          "destination": "ds_dimens.xml",
          "format": "android/resources",
          "filter": {
            "attributes": { "category": "size" }
          }
        },
        }
      ]
    },
    "compose": {
      "transformGroup": "compose",
      "buildPath": "../android/app/src/main/design-system/",
      "files": [
        {
          "destination": "DSColor.kt",
          "format": "compose/object",
          "className": "DSColor",
          "packageName": "DSColor",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "DSSize.kt",
          "format": "compose/object",
          "className": "DSSize",
          "packageName": "DSSize",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    },
    "ios": {
      "transformGroup": "ios",
      "buildPath": "build/ios/",
      "files": [
        {
          "destination": "DSColor.h",
          "format": "ios/colors.h",
          "className": "DSColor",
          "type": "DSColorName",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "DSColor.m",
          "format": "ios/colors.m",
          "className": "DSColor",
          "type": "DSColorName",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "DSSize.h",
          "format": "ios/static.h",
          "className": "DSSize",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        },
        {
          "destination": "DSSize.m",
          "format": "ios/static.m",
          "className": "DSSize",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    },
    "ios-swift": {
      "transformGroup": "ios-swift",
      "buildPath": "build/ios-swift/",
      "files": [
        {
          "destination": "DS.swift",
          "format": "ios-swift/class.swift",
          "className": "DS",
          "filter": {}
        }
      ]
    },
    "ios-swift-separate-enums": {
      "transformGroup": "ios-swift-separate",
      "buildPath": "build/ios-swift/",
      "files": [
        {
          "destination": "DSColor.swift",
          "format": "ios-swift/enum.swift",
          "className": "DSColor",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "DSSize.swift",
          "format": "ios-swift/enum.swift",
          "className": "DSSize",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    }
  }
}
